{
  "name": "boilerplate-reactionic-meteor",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "lint": "eslint ."
  },
  "dependencies": {
    "autoprefixer": "^6.3.1",
    "classnames": "^2.2.3",
    "faker": "^3.0.1",
    "jquery": "^2.2.3",
    "lodash": "^4.5.1",
    "meteor-node-stubs": "^0.2.3",
    "moment": "^2.13.0",
    "react": "^15.0.0",
    "react": "^15.0.2",
    "react-addons-css-transition-group": "^15.0.2",
    "react-addons-pure-render-mixin": "^15.0.2",
    "react-addons-update": "^15.0.2",
    "react-dom": "^15.0.2",
    "react-router": "^2.4.0",
    "react-static-container": "^1.0.0",
    "reactionic": "^1.1.0"
  },
  "devDependencies": {
    "eslint": "^2.10.2",
    "eslint-config-airbnb": "^7.0.0",
    "eslint-plugin-import": "^1.8.0",
    "eslint-import-resolver-meteor": "^0.2.3",
    "eslint-plugin-jsx-a11y": "^0.6.2",
    "eslint-plugin-meteor": "^3.4.0",
    "eslint-plugin-react": "^4.3.0",
    "gm": "^1.21.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "meteor",
      "react"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended",
      "plugin:react/recommended"
    ],
    "globals": {
      "server": false,
      "browser": false,
      "expect": false
    },
    "rules": {
      "react/display-name": 0,
      "no-underscore-dangle": [
        "error",
        {
          "allowAfterThis": true,
          "allow": [
            "_id",
            "_ensureIndex",
            "_verifyEmailToken",
            "_resetPasswordToken",
            "_name"
          ]
        }
      ]
    },
    "settings": {
      "import/resolver": "meteor"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 2 versions"
        ]
      }
    }
  }
}
